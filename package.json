{
  "name": "munilink-reg-3",
  "version": "1.0.0",
  "private": true,
  "description": "Municipality-first digital governance platform for Region 3 (Central Luzon).",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
